<section id="portfolio" class="portfolio section">
    <div class="container section-title" data-aos="fade-down">
        <h2>Portfolio</h2>
        <div class="title-shape">
            <svg viewBox="0 0 200 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M 0,10 C 40,0 60,20 100,10 C 140,0 160,20 200,10" fill="none" stroke="currentColor"
                    stroke-width="2"></path>
            </svg>
        </div>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <!-- Filter -->
            <div class="portfolio-filters-container" data-aos="fade-up" data-aos-delay="200">
                <ul class="portfolio-filters isotope-filters">
                    <li class="filter-active" data-filter="*">All Work</li>
                    <% type.forEach(item=> { %>
                        <li data-filter=".filter-<%= item.IdType %>">
                            <%= item.TypeName %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <!-- Grid Container (Semua item dalam 1 row) -->
            <div class="row g-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                <div class="row g-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                    <% project.forEach(p=> { %>
                        <% if (p.FilePath) { %>
                            <div class="col-lg-6 col-md-6 portfolio-item isotope-item filter-<%= p.IdType %>">
                                <div class="portfolio-card">
                                    <div class="portfolio-image">
                                        <img src="<%= p.FilePath %>" class="img-fluid" alt="<%= p.ProjectName %>" loading="lazy">
                                        <div class="portfolio-overlay">
                                            <div class="portfolio-actions">
                                                <a href="<%= p.FilePath %>" class="glightbox preview-link" data-gallery="portfolio-gallery-web"><i class="bi bi-eye"></i></a>
                                                <a href="/projectDetail/<%= p.IdProject %>" class="details-link"><i class="bi bi-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="portfolio-content">
                                        <span class="category"><%= p.TypeName %></span>
                                        <h3><%= p.ProjectName %></h3>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</section>